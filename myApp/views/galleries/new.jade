extends ../layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/galleries') Gallery
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/users/logout') Log Out
  .container
    .page-header 
      h1 Add a Gallery   
        small.text-warning info about this gallery
    .row
      .col-md-6
        include errors
        form(action='/galleries', method='post')
          label(for='title') Gallery Title
          input.form-control(type='text' name='title' id='title' placeholder='title...')
          label(for='description') Gallery Description
          input.form-control(type='text' name='description' id='description' placeholder='description...')
          label(for='url') Gallery Cover
          input.form-control(type='text' name='url' id='url' placeholder='img url for the cover...')
          button.btn.btn-info(type='submit') Add Gallery