extends ../layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Gallery
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/users/logout') Log Out
  .container
    .page-header 
      h1 My Galleries   
        small.text-warning have a look...
    .row
      .col-md-12
        a(href="/galleries/new" class="btn btn-default margin-bottom" role="button") Add a Gallery
    .row
      for gallery in galleries
        .col-md-4
          .thumbnail
            img(src= gallery.img, alt='pic1')
            .caption
              h3.text-center= gallery.title
              p.text-center= gallery.description
              p
                a(href="/galleries/"+gallery._id+'/photos' class="btn btn-warning" role="button") See Photos
                a(href="/galleries/"+gallery._id+'/gallery-delete' class="btn btn-danger right" role="button") Delete Gallery
    h1.text-info Other Users' Galleries
    if otherGalleries
      for otherGallery in otherGalleries
        .row
          .col-md-12
            .page-header
              h2.text-warning= otherGallery.email
            for specificGallery in otherGallery.specificGalleries
              .col-md-4
                .thumbnail
                  img(src= specificGallery.img, alt='pic')
                  .caption
                    h3.text-center= specificGallery.title
                    p.text-center= specificGallery.description
