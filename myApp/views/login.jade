extends layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Gallery
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/register') Register
  .container
    .page-header 
      h1 My Photo Gallery   
        small.text-warning log in to manage your photos and galleries
    .row
      .col-md-6.col-md-offset-3
        include errors
        form.form-group(action='/users/login' method='post')
          label(for='email')
            i(class='glyphicon glyphicon-envelope')
            strong   Email
          input.form-control(type='email' name='email' id='email')
          label(for='password')
            i(class="fa fa-unlock-alt")
            strong   Password
          input.form-control(type='password' name='password' id='password')
          button(type='submit' class='btn btn-warning') Log In




