extends ../layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/galleries') Gallery
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/users/logout') Log Out
  .container
    .page-header 
      h1 #{gallery.title}   
        small.text-warning photos in this gallery...
    .row
      .col-md-4
        a(href="/galleries/" + gallery._id + '/photos/new').add.btn.btn-success Add a Photo
    .row
      each photo, index in photos
        .col-md-4
          .thumbnail
            img(src= photo.img, alt='pic1')
            .caption
              h3.text-center= photo.name
              p
                a(href="/galleries/"+gallery._id+'/photos/'+photo._id +'/edit' class="btn btn-warning" role="button") Edit
        

