extends ../layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/galleries') Gallery
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/users/logout') Log Out
  .container
    .page-header 
      h1 #{gallery.title}   
        small.text-warning add a photo to this gallery
    .row
      .col-md-6
        include errors
        form(action='/galleries/' + gallery._id + '/photos', method='post')
          label(for='name') Name
          input.form-control(type='text' name='name' id='name' placeholder='name...')
          label(for='url') Url
          input.form-control(type='text' name='url' id='name' placeholder='img url...')
          button.btn.btn-info(type='submit') Add Photo